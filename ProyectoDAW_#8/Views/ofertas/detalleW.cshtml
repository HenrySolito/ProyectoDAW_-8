@{
   <form asp-action="detalleW">
        @foreach(var ofertas in (IEnumerable<dynamic>)ViewData["detallesOferta"])
        {
            <div style="margin-bottom: 5%;" class="text-center n2">
    <p class="h3">@ofertas.nombrePuesto</p>
    </div>
    
    <div class="container text-center my-5">
  <div class="row align-items-start">
    <div class="col-md-6">
      <div class="row g-0">
        <div class="col border rounded overflow-hidden flex-md-row mb-4 shadow-sm h-md-250 position-relative">
          <div class="col p-4 d-flex flex-column position-static">
            <h3 class="mb-0">Descripción del puesto</h3>
            <p class="card-text mb-auto">@ofertas.descripcionEmpleo</p>
          </div>
        </div>
      </div>
    </div>
    <div class="col-md-6">
      <img src="~/imagenes/img1.png" class="rounded float-end mt-2" alt="Descripción de la imagen" width="50%" height="auto">
    </div>
    <div class="d-md-flex justify-content-md-end my-5">
      <a href="#" class="btn btn-primary text-end align-content-end padding-top ">Aplicar</a>
    </div>
  </div>
</div>

<div style="margin-bottom: 5%;" class="text-center n2">
    <p class="h3">@ofertas.nombreEmpresa</p>
</div>
<div class="container text-center my-5">
  <div class="row align-items-start">
    <div class="col-md-6">
      <div class="row g-0">
        <div class="col border rounded overflow-hidden flex-md-row mb-4 shadow-sm h-md-250 position-relative">
          <div class="col p-4 d-flex flex-column position-static">
            <h3 class="mb-0">Descripción de la empresa</h3>
            <p class="card-text mb-auto">@ofertas.descripcionEmpresa</p>
            <h6>@ofertas.ubicacion</h6>
          </div>
        </div>
      </div>
    </div>
    <div class="col-md-6">
      <img src="~/imagenes/img1.png" class="rounded float-end mt-2" alt="Descripción de la imagen" width="50%" height="auto">
    </div>
  </div>
</div>
 

<div class="mb-3">
<p class="h3">Comentarios y reseñas</p>
</div>
<div class="mb-3">
  <label for="comentarioOferta" class="form-label">Agregar comentario</label>
  <textarea class="form-control" id="comentarioOferta" rows="3"></textarea>
</div>
<div class="d-md-flex justify-content-md-end my-3">
      <a href="#" class="btn btn-primary text-end align-content-end padding-top ">Comentar</a>
</div> 
        }
       

   </form>
}
